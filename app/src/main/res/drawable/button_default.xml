<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/gray_light"
                android:angle="270"
                />
            <stroke
                android:width="3dp"
                android:color="@color/gray"
                />
            <corners
                android:radius="3dp"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/white"
                android:angle="270"
                />
            <stroke
                android:width="3dp"
                android:color="@color/gray_light"
                />
            <corners
                android:radius="3dp"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
</selector>